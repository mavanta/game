local player = game:GetService("Players")
local plr = player.LocalPlayer
local gui = game:GetService("StarterGui")
local char = plr.Character or plr.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "DraggableGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 260)
frame.Position = UDim2.new(0.5, -100, 0.5, -130)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local titleBar = Instance.new("TextLabel")
titleBar.Size = UDim2.new(1, 0, 0, 30)
titleBar.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
titleBar.Text = "BCB - Hunty Zombie 1.6"
titleBar.TextColor3 = Color3.new(1, 1, 1)
titleBar.Font = Enum.Font.SourceSansBold
titleBar.TextSize = 18
titleBar.Parent = frame
titleBar.TextXAlignment = Enum.TextXAlignment.Left

local ytb = Instance.new("TextLabel")
ytb.Size = UDim2.new(1, 0, 0, 20)
ytb.Position = UDim2.new(0, 10, 0, 240)
ytb.BackgroundTransparency = 1
ytb.Text = "Youtube: @batcanboard"
ytb.TextColor3 = Color3.new(1, 1, 1)
ytb.Font = Enum.Font.SourceSansBold
ytb.TextSize = 16
ytb.Parent = frame

-- nút thu nhỏ
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0, 30, 0, 30)
toggleButton.Position = UDim2.new(1, -30, 0, 0)
toggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
toggleButton.Text = "-"
toggleButton.TextColor3 = Color3.new(1, 1, 1)
toggleButton.Font = Enum.Font.SourceSansBold
toggleButton.TextSize = 20
toggleButton.Parent = titleBar

local hidden = false
toggleButton.MouseButton1Click:Connect(function()
	if hidden == false then
		for _, obj in pairs(frame:GetChildren()) do
			if obj ~= titleBar then
				obj.Visible = false
			end
		end
		frame.Size = UDim2.new(0, 200, 0, 30)
		toggleButton.Text = "+"
		hidden = true
	else
		for _, obj in pairs(frame:GetChildren()) do
			obj.Visible = true
		end
		frame.Size = UDim2.new(0, 200, 0, 260)
		toggleButton.Text = "-"
		hidden = false
	end
end)

local Remote = game:GetService("ReplicatedStorage"):WaitForChild("ByteNetReliable")

-- AutoAttack
local btn1 = Instance.new("TextButton")
btn1.Size = UDim2.new(1, -20, 0, 40)
btn1.Position = UDim2.new(0, 10, 0, 40)
btn1.BackgroundColor3 = Color3.fromRGB(89, 89, 89)
btn1.Text = "⚔️Auto Attack"
btn1.TextColor3 = Color3.new(1,1,1)
btn1.Font = Enum.Font.SourceSansBold
btn1.TextSize = 14
btn1.Parent = frame

btn1.MouseButton1Click:Connect(function()
	local args = {
		buffer.fromstring("\a\004\001"),
		{1755794295.606943}
	}

	while task.wait(0.1) do
		Remote:FireServer(unpack(args))
	end
end)

-- Auto Collect Coin
local btn2 = Instance.new("TextButton")
btn2.Size = UDim2.new(1, -20, 0, 40)
btn2.Position = UDim2.new(0, 10, 0, 90)
btn2.BackgroundColor3 = Color3.fromRGB(89, 89, 89)
btn2.Text = "Auto Collect Coin (mặc định)"
btn2.TextColor3 = Color3.new(1,1,1)
btn2.Font = Enum.Font.SourceSansBold
btn2.TextSize = 14
btn2.Parent = frame

-- bring all zombie
local btn3 = Instance.new("TextButton")
btn3.Size = UDim2.new(1, -20, 0, 40)
btn3.Position = UDim2.new(0, 10, 0, 140)
btn3.BackgroundColor3 = Color3.fromRGB(89, 89, 89)
btn3.Text = "⚡Bring All Zombie"
btn3.TextColor3 = Color3.new(1,1,1)
btn3.Font = Enum.Font.SourceSansBold
btn3.TextSize = 14
btn3.Parent = frame

btn3.MouseButton1Click:Connect(function()
	
	local bigModel = workspace:WaitForChild("Entities")
	local childrenModels = {}
	for _, obj in ipairs(bigModel:GetChildren()) do
		if obj:IsA("Model") and obj:FindFirstChild("PrimaryPart") then
			table.insert(childrenModels, obj)
		end
	end

	if #childrenModels > 0 then
		local randomModel = childrenModels[math.random(1, #childrenModels)]

		hrp.CFrame = randomModel.PrimaryPart.CFrame + Vector3.new(0, 7, 0) -- +5 để không kẹt vào đất
	end
end)

-- Discord
local btn4 = Instance.new("TextButton")
btn4.Size = UDim2.new(1, -20, 0, 40)
btn4.Position = UDim2.new(0, 10, 0, 190)
btn4.BackgroundColor3 = Color3.fromRGB(89, 89, 89)
btn4.Text = "Join Discord Bro 🔥"
btn4.TextColor3 = Color3.new(1,1,1)
btn4.Font = Enum.Font.SourceSansBold
btn4.TextSize = 14
btn4.Parent = frame

btn4.MouseButton1Click:Connect(function()
		btn4.Text = "Copied"
		setclipboard("https://discord.gg/592AGgZHm7")
        wait(2)
		btn4.Text = "Join Discord Bro 🔥"
end)
