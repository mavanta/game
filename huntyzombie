btn2.MouseButton1Click:Connect(function()
	local args2 = {
		buffer.fromstring("\a\003\001"),
		{1756364254.43282}
	}
	local args3 = {
		buffer.fromstring("\a\005\001")
		{1756364313.48059}
	}
	local args4 = {
		buffer.fromstring("\a\006\001")
		{1756364316.852401}

	}

	while task.wait(0.1) do
		Remote:FireServer(unpack(args2))
		Remote:FireServer(unpack(args3))
		Remote:FireServer(unpack(args4))
	end
end)

