local Players = game:GetService("Players")
local plr = Players.LocalPlayer
local RS = game:GetService("ReplicatedStorage")

-- GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "DraggableGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = plr:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0,200,0,260)
frame.Position = UDim2.new(0.5,-100,0.5,-130)
frame.BackgroundColor3 = Color3.fromRGB(40,40,40)
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local titleBar = Instance.new("TextLabel")
titleBar.Size = UDim2.new(1,0,0,30)
titleBar.BackgroundColor3 = Color3.fromRGB(25,25,25)
titleBar.Text = "BCB|HuntyZombie 1.6"
titleBar.TextColor3 = Color3.new(1,1,1)
titleBar.Font = Enum.Font.SourceSansBold
titleBar.TextSize = 18
titleBar.Parent = frame

-- N√∫t thu nh·ªè
local toggleButton = Instance.new("TextButton")
toggleButton.Size = UDim2.new(0,30,0,30)
toggleButton.Position = UDim2.new(1,-30,0,0)
toggleButton.BackgroundColor3 = Color3.fromRGB(50,50,50)
toggleButton.Text = "-"
toggleButton.TextColor3 = Color3.new(1,1,1)
toggleButton.Font = Enum.Font.SourceSansBold
toggleButton.TextSize = 20
toggleButton.Parent = titleBar

local hidden = false
toggleButton.MouseButton1Click:Connect(function()
	hidden = not hidden
	for _, obj in pairs(frame:GetChildren()) do
		if obj ~= titleBar then
			obj.Visible = not hidden
		end
	end
	frame.Size = hidden and UDim2.new(0,200,0,30) or UDim2.new(0,200,0,260)
	toggleButton.Text = hidden and "+" or "-"
end)

-- Bi·∫øn toggle v√† thread
local autoAttackEnabled, autoAttackThread = false, nil
local autoSkillEnabled, autoSkillThread = false, nil

-- H√†m AutoAttack
local function autoAttack()
	if autoAttackThread then return end
	autoAttackThread = task.spawn(function()
		local Remote = RS:WaitForChild("ByteNetReliable")
		while autoAttackEnabled do
			Remote:FireServer(buffer.fromstring("\a\004\001"), {tick()})
			task.wait(0.1)
		end
		autoAttackThread = nil
	end)
end

-- H√†m AutoSkill
local function autoSkill()
	if autoSkillThread then return end
	autoSkillThread = task.spawn(function()
		local Remote = RS:WaitForChild("ByteNetReliable")
		while autoSkillEnabled do
			Remote:FireServer(buffer.fromstring("\a\003\001"), {tick()})
			Remote:FireServer(buffer.fromstring("\a\005\001"), {tick()})
			Remote:FireServer(buffer.fromstring("\a\006\001"), {tick()})
			task.wait(1)
		end
		autoSkillThread = nil
	end)
end

-- N√∫t AutoAttack
local btn1 = Instance.new("TextButton")
btn1.Size = UDim2.new(1,-20,0,40)
btn1.Position = UDim2.new(0,10,0,40)
btn1.BackgroundColor3 = Color3.fromRGB(255,0,0)
btn1.Text = "Auto Attack"
btn1.TextColor3 = Color3.new(1,1,1)
btn1.Font = Enum.Font.SourceSansBold
btn1.TextSize = 14
btn1.Parent = frame

btn1.MouseButton1Click:Connect(function()
	autoAttackEnabled = not autoAttackEnabled
	btn1.BackgroundColor3 = autoAttackEnabled and Color3.fromRGB(0,170,0) or Color3.fromRGB(255,0,0)
	if autoAttackEnabled then autoAttack() end
end)

-- N√∫t AutoSkill
local btn2 = Instance.new("TextButton")
btn2.Size = UDim2.new(1,-20,0,40)
btn2.Position = UDim2.new(0,10,0,90)
btn2.BackgroundColor3 = Color3.fromRGB(255,0,0)
btn2.Text = "Auto Skill"
btn2.TextColor3 = Color3.new(1,1,1)
btn2.Font = Enum.Font.SourceSansBold
btn2.TextSize = 14
btn2.Parent = frame

btn2.MouseButton1Click:Connect(function()
	autoSkillEnabled = not autoSkillEnabled
	btn2.BackgroundColor3 = autoSkillEnabled and Color3.fromRGB(0,170,0) or Color3.fromRGB(255,0,0)
	if autoSkillEnabled then autoSkill() end
end)

-- N√∫t 3: Bring Zombie (beta)
local btn3 = Instance.new("TextButton")
btn3.Size = UDim2.new(1,-20,0,40)
btn3.Position = UDim2.new(0,10,0,140)
btn3.BackgroundColor3 = Color3.fromRGB(255,0,0)
btn3.Text = "Bring Zombie (beta)"
btn3.TextColor3 = Color3.new(1,1,1)
btn3.Font = Enum.Font.SourceSansBold
btn3.TextSize = 14
btn3.Parent = frame

btn3.MouseButton1Click:Connect(function()
	if btn3.BackgroundColor3 == Color3.fromRGB(255,0,0) then
		btn3.BackgroundColor3 = Color3.fromRGB(0,170,0)
	else
		btn3.BackgroundColor3 = Color3.fromRGB(255,0,0)
	end
end)

-- N√∫t 4: Copy Discord
local btn4 = Instance.new("TextButton")
btn4.Size = UDim2.new(1,-20,0,40)
btn4.Position = UDim2.new(0,10,0,190)
btn4.BackgroundColor3 = Color3.fromRGB(255,0,0)
btn4.Text = "Join Discord Bro üî•"
btn4.TextColor3 = Color3.new(1,1,1)
btn4.Font = Enum.Font.SourceSansBold
btn4.TextSize = 14
btn4.Parent = frame

btn4.MouseButton1Click:Connect(function()
	if btn4.BackgroundColor3 == Color3.fromRGB(255,0,0) then
		btn4.Text = "Copied"
		setclipboard("https://discord.gg/592AGgZHm7")
		task.wait(2)
		btn4.Text = "Join Discord Bro üî•"
	end
end)
